    package="com.adeel.pythonmini"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.adeel.pythonmini.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    <activity android:name="com.adeel.pythonmini.About" android:configChanges="orientation|screenSize"/>
    <activity android:name="com.adeel.pythonmini.Stopwatch" android:configChanges="orientation|screenSize"/>
    <activity android:name="com.adeel.pythonmini.Black" android:configChanges="orientation|screenSize"/>
    <activity android:name="com.adeel.pythonmini.Memory" android:configChanges="orientation|screenSize"/>
    <activity android:name="com.adeel.pythonmini.Pong" android:configChanges="orientation|screenSize"/>
    <activity android:name="com.adeel.pythonmini.Ricerocks" android:configChanges="orientation|screenSize"/>
    </application>

</manifest>
